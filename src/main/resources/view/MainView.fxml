<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sga.marzad.controller.MainController"
            prefWidth="1024" prefHeight="768"
            styleClass="main-bg">

    <!-- HEADER -->
    <top>
        <VBox spacing="0">

            <!-- HEADER PRINCIPAL -->
            <HBox spacing="20" alignment="CENTER_LEFT"
                  styleClass="header-box"
                  prefHeight="50">

                <!-- Logo -->
                <ImageView fitHeight="100" preserveRatio="true">
                    <image>
                        <Image url="@/img/logo1.png"/>
                    </image>
                </ImageView>

                <!-- Espaciador izquierdo -->
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Título centrado -->
                <Label fx:id="lblSistema" text="SGA - Sistema de Gestión Académica"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"
                       alignment="CENTER"/>

                <!-- Espaciador derecho -->
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Usuario y Reloj -->
                <VBox alignment="CENTER_RIGHT" spacing="4">
                    <Label fx:id="lblUsuario" text="Usuario (ROL)"
                           style="-fx-font-size: 14px; -fx-text-fill: #00B2A9;"/>
                    <Label fx:id="lblReloj"
                           style="-fx-font-size: 13px; -fx-text-fill: #FFC845;"/>
                </VBox>
            </HBox>

            <!-- MENUBAR CON FONDO MÁS CLARO -->
            <MenuBar fx:id="menuBar" styleClass="menu-bar"/>

        </VBox>
    </top>


    <!-- CENTRO -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 40 40;" BorderPane.alignment="CENTER">

            <!-- Mensaje de bienvenida -->
            <Label text="¡Bienvenido al Sistema de Gestión Académica!"
                   style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <!-- Descripción -->
            <Label text="Este sistema permite gestionar alumnos, docentes, materias, inscripciones, calificaciones y más."
                   wrapText="true"
                   maxWidth="800"
                   style="-fx-font-size: 16px; -fx-text-fill: #FFC845;"/>

            <!-- Noticias (simuladas tipo post-it) -->
            <HBox spacing="16" alignment="CENTER">
                <VBox style="-fx-background-color: #fff8dc; -fx-padding: 14; -fx-background-radius: 10;"
                      maxWidth="200" minHeight="140">
                    <Label text="📌 Inscripciones abiertas hasta el 10/08" wrapText="true"
                           style="-fx-font-size: 14px; -fx-text-fill: #1e4370;"/>
                </VBox>
                <VBox style="-fx-background-color: #e0f7fa; -fx-padding: 14; -fx-background-radius: 10;"
                      maxWidth="200" minHeight="140">
                    <Label text="📢 Nuevo reglamento de cursado disponible" wrapText="true"
                           style="-fx-font-size: 14px; -fx-text-fill: #1e4370;"/>
                </VBox>
                <VBox style="-fx-background-color: #fce4ec; -fx-padding: 14; -fx-background-radius: 10;"
                      maxWidth="200" minHeight="140">
                    <Label text="👩‍🏫 Jornada institucional el viernes 16" wrapText="true"
                           style="-fx-font-size: 14px; -fx-text-fill: #1e4370;"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox spacing="20" alignment="CENTER_RIGHT"
              style="-fx-background-color: #19335A; -fx-padding: 10 20;">
            <Label fx:id="lblVersion" text="v1.0" style="-fx-text-fill: #FFC845;"/>
            <Label fx:id="lblAutor" text="MarZad" style="-fx-text-fill: #00B2A9;"/>
            <Label fx:id="lblBdStatus" text="BD: OK" style="-fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>
