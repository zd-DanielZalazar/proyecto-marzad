<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sga.marzad.controller.RegistroController"
            prefWidth="500" prefHeight="600"
            styleClass="main-bg">

    <top>
        <Label text="Registro de Usuario"
               style="-fx-font-size: 22px; -fx-text-fill: white;"
               BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>
        </Label>
    </top>

    <center>
        <StackPane fx:id="contenedorRegistro">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Selección de tipo de usuario -->
            <VBox fx:id="vboxTipoUsuario" spacing="15" alignment="CENTER">
                <Label text="Seleccione tipo de usuario" styleClass="label-title"/>
                <HBox spacing="20">
                    <Button text="Alumno" onAction="#mostrarFormularioAlumno" styleClass="btn-primary"/>
                    <Button text="Docente" onAction="#mostrarFormularioDocente" styleClass="btn-primary"/>
                </HBox>
            </VBox>

            <!-- Formulario Alumno -->
            <VBox fx:id="vboxAlumno" spacing="10" visible="false" styleClass="panel">
                <Label text="Registro de Alumno" styleClass="label-title"/>

                <TextField fx:id="txtNombreAlumno" promptText="Nombre" styleClass="text-field"/>
                <TextField fx:id="txtApellidoAlumno" promptText="Apellido" styleClass="text-field"/>
                <TextField fx:id="txtDniAlumno" promptText="DNI" styleClass="text-field"/>
                <TextField fx:id="txtCorreoAlumno" promptText="Correo" styleClass="text-field"/>
                <DatePicker fx:id="dpFechaNacAlumno"/>
                <ComboBox fx:id="comboGeneroAlumno" promptText="Seleccione género"/>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Cancelar" onAction="#volver"/>
                    <Button text="Registrarse" onAction="#registrarAlumno" styleClass="btn-primary"/>
                </HBox>
            </VBox>

            <!-- Formulario Docente -->
            <VBox fx:id="vboxDocente" spacing="10" visible="false" styleClass="panel">
                <Label text="Registro de Docente" styleClass="label-title"/>

                <TextField fx:id="txtNombreDocente" promptText="Nombre" styleClass="text-field"/>
                <TextField fx:id="txtApellidoDocente" promptText="Apellido" styleClass="text-field"/>
                <TextField fx:id="txtDniDocente" promptText="DNI" styleClass="text-field"/>
                <TextField fx:id="txtCorreoDocente" promptText="Correo" styleClass="text-field"/>
                <ComboBox fx:id="comboGeneroDocente" promptText="Seleccione género"/>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Cancelar" onAction="#volver"/>
                    <Button text="Registrarse" onAction="#registrarDocente" styleClass="btn-primary"/>
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
