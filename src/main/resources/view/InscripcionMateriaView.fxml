<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sga.marzad.controller.InscripcionMateriaController"
            prefWidth="900" prefHeight="600"
            styleClass="main-bg">

    <top>
        <VBox spacing="8">
            <Label text="Inscripción a Materias" styleClass="title"/>
            <HBox spacing="20">
                <Label text="Carrera:" styleClass="subtitle"/>
                <Label fx:id="lblCarrera" styleClass="subtitle-value"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <TabPane fx:id="tabPaneAnios" tabClosingPolicy="UNAVAILABLE"/>
            <Label text="Materias Inscritas:" styleClass="subtitle"/>
            <TableView fx:id="tablaInscripciones" prefWidth="800" prefHeight="200">
                <columns>
                    <TableColumn text="ID"/>
                    <TableColumn text="Materia ID"/>
                    <TableColumn text="Fecha Inscripción"/>
                    <TableColumn text="Estado"/>
                </columns>
            </TableView>
            <HBox spacing="10" alignment="CENTER">
                <ComboBox fx:id="comboMaterias" promptText="Seleccionar materia"/>
                <Button fx:id="btnInscribir" text="Inscribir" onAction="#inscribirMateria"/>
                <Label fx:id="lblEstado"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
