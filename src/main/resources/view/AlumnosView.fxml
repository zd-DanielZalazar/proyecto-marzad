<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sga.marzad.controller.AlumnosController"
            prefWidth="900" prefHeight="650"
            styleClass="main-bg">

    <!-- TABLA -->
    <center>
        <TableView fx:id="tableAlumnos"
                   prefHeight="400"
                   styleClass="table-panel">
            <columns>
                <TableColumn text="ID"             fx:id="colId"         prefWidth="50"/>
                <TableColumn text="Usuario ID"     fx:id="colUsuario"    prefWidth="75"/>
                <TableColumn text="Nombre"         fx:id="colNombre"     prefWidth="150"/>
                <TableColumn text="Apellido"       fx:id="colApellido"   prefWidth="150"/>
                <TableColumn text="DNI"            fx:id="colDni"        prefWidth="100"/>
                <TableColumn text="Correo"         fx:id="colCorreo"     prefWidth="200"/>
                <TableColumn text="F. Nacimiento"  fx:id="colFecha"      prefWidth="100"/>
                <TableColumn text="Género"         fx:id="colGenero"     prefWidth="75"/>
                <TableColumn text="Habilitado"     fx:id="colHabilitado" prefWidth="75"/>
            </columns>
        </TableView>
    </center>

    <!-- FORMULARIO Y BOTONES -->
    <bottom>
        <VBox spacing="12" styleClass="panel">
            <padding>
                <Insets top="12" right="20" bottom="12" left="20"/>
            </padding>

            <!-- FORMULARIO -->
            <GridPane hgap="12" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Usuario ID:"   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUsuarioId" styleClass="text-field"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nombre:"       GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="txtNombre" styleClass="text-field"
                           GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Apellido:"     GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtApellido" styleClass="text-field"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="DNI:"          GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="txtDni" styleClass="text-field"
                           GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <Label text="Correo:"       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCorreo" styleClass="text-field"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Fecha Nac.:"   GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <DatePicker fx:id="dpFechaNac"
                            GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <Label text="Género:"       GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtGenero" styleClass="text-field"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Habilitado:"   GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <CheckBox fx:id="cbHabilitado"
                          GridPane.rowIndex="3" GridPane.columnIndex="3"/>
            </GridPane>

            <!-- BOTONES -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Nuevo"    onAction="#onNew"    styleClass="btn-primary"/>
                <Button text="Guardar"  onAction="#onSave"   styleClass="btn-primary"/>
                <Button text="Eliminar" onAction="#onDelete" styleClass="btn-danger"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
