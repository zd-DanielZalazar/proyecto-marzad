<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sga.marzad.controller.DocenteMateriasController"
            prefWidth="900" prefHeight="600"
            styleClass="main-bg">

    <top>
        <VBox spacing="18" alignment="CENTER">
            <Label text="Panel Docente"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Materias a cargo"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="18" alignment="TOP_CENTER">
            <Label text="Seleccione una materia" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            <ComboBox fx:id="comboMaterias" prefWidth="450"/>
            <TableView fx:id="tablaAlumnos" editable="true" prefHeight="400" prefWidth="860"
                       style="-fx-background-color: transparent;">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre y Apellido" prefWidth="180"/>
                    <TableColumn fx:id="colDni" text="DNI" prefWidth="80"/>
                    <TableColumn fx:id="colCorreo" text="Correo" prefWidth="140"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="80"/>
                    <TableColumn fx:id="colParcial1" text="Primer Parcial" prefWidth="80" editable="true"/>
                    <TableColumn fx:id="colRecup1" text="Recup. 1" prefWidth="80" editable="true"/>
                    <TableColumn fx:id="colParcial2" text="Segundo Parcial" prefWidth="80" editable="true"/>
                    <TableColumn fx:id="colRecup2" text="Recup. 2" prefWidth="80" editable="true"/>
                    <TableColumn fx:id="colFinal" text="Final/Promo" prefWidth="80" editable="true"/>
                    <TableColumn fx:id="colAcciones" text="AcciÃ³n" prefWidth="60"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
