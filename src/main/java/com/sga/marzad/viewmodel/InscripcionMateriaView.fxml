<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sga.marzad.controller.InscripcionMateriaController"
            styleClass="main-bg"
            prefWidth="500" prefHeight="400">

    <top>
        <Label text="Inscripción a Materias"
               style="-fx-font-size: 22px; -fx-text-fill: white; -fx-padding: 18;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="18" alignment="CENTER" padding="28">
            <Label text="Seleccione una materia disponible:" />
            <ComboBox fx:id="comboMaterias" prefWidth="340"/>
            <Button text="Inscribirse" fx:id="btnInscribir" onAction="#inscribirMateria" prefWidth="160"/>
            <Label fx:id="lblEstado" text="" style="-fx-font-size: 14px;"/>
            <Label text="Materias ya inscriptas:" style="-fx-font-size: 15px;"/>
            <TableView fx:id="tablaInscripciones" prefHeight="160" prefWidth="360">
                <columns>
                    <TableColumn text="ID" prefWidth="40" />
                    <TableColumn text="Materia ID" prefWidth="60" />
                    <TableColumn text="Fecha Inscripción" prefWidth="120" />
                    <TableColumn text="Estado" prefWidth="80" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
